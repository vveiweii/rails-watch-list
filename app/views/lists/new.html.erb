<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>New list</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>

        <p><%= link_to "Back to home", lists_path %></p>
      </div>
    </div>
  </div>
</div>
